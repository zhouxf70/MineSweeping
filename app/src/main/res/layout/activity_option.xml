<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.OptionActivity">

    <TextView
            android:id="@+id/tv_width"
            android:text="宽："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"/>
    <EditText
            android:id="@+id/et_width"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_width"
            app:layout_constraintBottom_toBottomOf="@+id/tv_width"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:layout_constraintStart_toEndOf="@+id/tv_width"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/tv_height"
            android:text="高："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_width"/>
    <EditText
            android:id="@+id/et_height"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_height"
            app:layout_constraintBottom_toBottomOf="@+id/tv_height"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_width"/>

    <TextView
            android:id="@+id/tv_mine"
            android:text="地雷数量："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_height"/>
    <EditText
            android:id="@+id/et_mine"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_mine"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mine"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_height"
    />
    <Button
            android:id="@+id/start"
            android:text="开始"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toBottomOf="@+id/et_mine"/>
</android.support.constraint.ConstraintLayout>